@model Knowledgeable.Models.ArticleModel
@{
    ViewBag.Title = "ViewArticle";
}

<h2>ViewArticle</h2>

<div>
    <h4>Article</h4>
    <hr />
    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DatePosted)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DatePosted)
        </dd>
        @if (Model.DateModified != null)
        {
            <dt>
                @Html.DisplayNameFor(model => model.DateModified)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DateModified)
            </dd>
        }

        <dt>
            @Html.DisplayNameFor(model => model.Article1)
        </dt>

        <dd>
            @Html.Raw(Model.Article1)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ArticleID }) |
    @Html.ActionLink("Back to List", "Index")
</p>


<div id="comment"></div>
<div>
    <input type="text" id="comment" alt="Write a comment..." />
    <input type="button" value="Post" onclick="SubmitComment()" />
</div>
<script src="~/Scripts/jquery-2.2.0.js"></script>
<script>
    var articleid = '@Model.ArticleID';
    function SubmitComment(){
        var comment = document.getElementById("comment");
        alert(comment.value);
    }


    $.ajax({
        type: "GET",
        url: '/Comment/LoadComment',
        data: { id:articleid},
        processdata: true,
        cache: false,
        contentType: "application/html",
        dataType: "html",
        success: function (data) {
            //var JsonObj = $.parseJSON(data);
            $("#CategoryContainer").html(data);
            document.getElementById('editButton').innerHTML = "Cancel";
            document.getElementById('titleTop').innerHTML = "Edit";

        },
        error: function (xhr, status, error) {
            //alert(xhr.responseText);
            //var err = eval("(" + xhr.responseText + ")");
            alert("error");
        },
    });
</script>